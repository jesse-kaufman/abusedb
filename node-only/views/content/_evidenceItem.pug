- var messageClass = item.direction === 'OUT' ? item.victim : 'brian'

.message(class=item.type + ' ' + messageClass)
    .meta
        include evidenceItem/header/_icon
        include evidenceItem/header/_info

    .body
        if item.type === 'video'
            include evidenceItem/_video
        if item.type === 'text'
            include evidenceItem/_text
        if item.type === 'email'
            include evidenceItem/_email
        if item.type === 'voicemail'
            include evidenceItem/_voicemail

    .footer
        span= item.type === 'text' ? 'text message' : item.type