{
  "compilerOptions": {
    "lib": ["ES2023", "dom"],
    "target": "ES2022",
    "module": "commonjs",
    "declaration": false,
    //"composite": true,
    "declarationMap": false,
    "outDir": "public",
    "rootDir": "src",
    "types": ["node", "jquery"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": false,
    "noEmit": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "src/**/*spec.ts"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": false,
    "experimentalResolver": true
  }
}
