{
  "compilerOptions": {
    "lib": ["ES2023", "dom"],
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    //"composite": true,
    "declarationMap": true,
    "outDir": "public",
    "rootDir": "src",
    "types": ["node", "jquery"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "noEmit": false
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
